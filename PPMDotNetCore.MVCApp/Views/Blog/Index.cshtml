@model List<BlogsModel>
@{
    ViewData["Title"] = "Blog";
    int count = 0;
}

<a href="/Blog/Create" class="btn btn-success">New</a>
<table class="table table-responsive">
    <thead>
        <tr>
            <td>No.</td>
            <td>Title</td>
            <td>Author</td>
            <td>Content</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (BlogsModel item in Model)
        {
            <tr>
                <td>@(++count)</td>
                <td>@item.BlogTitle</td>
                <td>@item.BlogAuthor</td>
                <td>@item.BlogContent</td>
                <td>
                    <a class="btn btn-warning" href="/Blog/Edit/@item.BlogId">Edit</a>
                    <a class="btn btn-danger" href="/Blog/Delete/@item.BlogId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>